{% extends 'admin.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Liste des articles <a class="btn btn-info" href="{{ path('article_new') }}">Create new</a></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Status</th>
                <th>Details</th>
                <th>Editidion</th>
                <th>Supression</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.status }}</td>
                <td><a class="btn btn-info" href="{{ path('article_show', {'id': article.id}) }}">show</a></td>
                <td><a class="btn btn-success" href="{{ path('article_edit', {'id': article.id}) }}">edit</a></td>
                <td>{{ include('article/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
