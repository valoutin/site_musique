{% extends 'admin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Liste des événements <a class="btn btn-info" href="{{ path('event_new') }}">Créer un nouvelle évenement</a></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Start</th>
                <th>End</th>
                <th>Edition</th>
                <th>Supression</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.titre }}</td>
                <td>{{ event.start ? event.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.end ? event.end|date('Y-m-d H:i:s') : '' }}</td>
                <td><a <a class="btn btn-success" href="{{ path('event_edit', {'id': event.id}) }}">éditer</a></td>
                <td>{{ include('event/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
