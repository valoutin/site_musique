{% extends 'admin.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Listes des contacts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Mail</th>
                <th>Resquest</th>
                <th>Details</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.titre }}</td>
                <td>{{ contact.mail }}</td>
                <td>{{ contact.resquest|striptags|slice(0, 30)|raw }}</td>
                <td><a class="btn btn-info" href="{{ path('contact_show', {'id': contact.id}) }}">Details</a></td>
                <td>{{ include('contact/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ paginator|raw }}

{% endblock %}
